rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Utilizatori ---
    // Fiecare user își poate citi/modifica doar propriul document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // nu permitem ștergerea contului din client
    }

    // --- Setări fotografi (profil brand, configurări) ---
    // Creat automat la înregistrare. Doar proprietarul poate accesa.
    match /setariFotografi/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // --- Galerii ---
    // Doar proprietarul (userId din document) poate citi/scrie.
    match /galerii/{galerieId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- Blocăm tot restul implicit ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
