/* LAYOUT PRINCIPAL */
.dashboard-layout {
    display: flex;
    min-height: 100vh;
  }
  
  /* SIDEBAR */
  .dashboard-sidebar {
    width: 240px;
    background-color: #1a1a1a;
    color: white;
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    position: sticky;
    top: 0;
    height: 100vh;
  }
  
  .dashboard-sidebar h1 {
    font-size: 20px;
    letter-spacing: 2px;
    margin: 0 0 30px 0;
  }
  
  .sidebar-button {
    padding: 12px 16px;
    background-color: transparent;
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    text-align: left;
    font-size: 14px;
    font-weight: normal;
    transition: background-color 0.2s;
  }
  
  .sidebar-button:hover {
    background-color: #2a2a2a;
  }
  
  .sidebar-button.active {
    background-color: #333;
    font-weight: bold;
  }
  
  .sidebar-button.logout {
    margin-top: auto;
    color: #999;
    border: 1px solid #444;
  }
  
  /* MAIN CONTENT */
  .dashboard-main {
    flex: 1;
    background-color: #f9f9f9;
    min-height: 100vh;
  }
  
  .dashboard-header {
    background-color: #000;
    color: #fff;
    padding: 20px 50px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .dashboard-header h1 {
    font-size: 20px;
    letter-spacing: 2px;
    margin: 0;
  }
  
  .dashboard-header .user-info {
    color: #666;
  }
  
  /* DRIVE CONTENT */
  .drive-content {
    padding: 40px 50px;
  }
  
  .drive-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30px;
    align-items: center;
  }
  
  .drive-header h2 {
    font-weight: 300;
    margin: 0;
  }
  
  .btn-add-gallery {
    background-color: #000;
    color: #fff;
    border: none;
    padding: 12px 25px;
    border-radius: 4px;
    cursor: pointer;
  }
  
  /* ADD GALLERY FORM */
  .add-gallery-form {
    background: white;
    padding: 25px;
    border-radius: 8px;
    margin-bottom: 40px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    display: grid;
    grid-template-columns: 2fr 1fr 1fr auto;
    gap: 15px;
    align-items: end;
  }
  
  .form-field label {
    display: block;
    font-size: 12px;
    margin-bottom: 5px;
  }
  
  .btn-create {
    background-color: #000;
    color: #fff;
    border: none;
    padding: 14px 25px;
    cursor: pointer;
    border-radius: 4px;
  }
  
  /* GALLERY GRID */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 25px;
  }
  
  .gallery-card {
    background-color: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
  }
  
  .gallery-card.inactive {
    opacity: 0.7;
  }
  
  .gallery-cover {
    height: 180px;
    background-color: #333;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: flex-end;
    padding: 20px;
  }
  
  .gallery-status {
    position: absolute;
    top: 15px;
    left: 15px;
    color: white;
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 10px;
    font-weight: bold;
  }
  
  .gallery-status.active {
    background: #28a745;
  }
  
  .gallery-status.inactive {
    background: #666;
  }
  
  .gallery-cover-info {
    color: white;
    text-shadow: 0 2px 4px rgba(0,0,0,0.8);
  }
  
  .gallery-cover-info h3 {
    margin: 0;
    font-size: 18px;
  }
  
  .gallery-cover-info small {
    opacity: 0.9;
  }
  
  .gallery-info {
    padding: 20px;
  }
  
  .gallery-stats {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
    font-size: 13px;
    color: #666;
  }
  
  .stat-expiry {
    color: #888;
  }
  
  .stat-expiry.has-expiry {
    color: #e74c3c;
  }
  
  .gallery-actions {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 10px;
  }
  
  .btn-manage {
    padding: 12px;
    background: #000;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 6px;
    font-weight: bold;
  }
  
  .btn-toggle {
    padding: 12px;
    background: none;
    border: 1px solid #ddd;
    cursor: pointer;
    border-radius: 6px;
    font-size: 12px;
  }
  
  /* PLACEHOLDER VIEWS */
  .placeholder-view {
    padding: 100px;
    text-align: center;
    color: #999;
  }
  
  .placeholder-view h2 {
    font-size: 48px;
    margin: 0 0 20px 0;
  }
  
  /* GALLERY VIEW */
  .gallery-view {
    min-height: 100vh;
    background-color: #f5f5f5;
  }
  
  .gallery-header {
    background-color: #111;
    color: white;
    padding: 15px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .gallery-header-left {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  
  .btn-back {
    background: none;
    border: 1px solid #444;
    color: white;
    padding: 8px 15px;
    border-radius: 4px;
    cursor: pointer;
  }
  
  .gallery-header h2 {
    margin: 0;
  }
  
  .gallery-header-right {
    display: flex;
    gap: 15px;
    align-items: center;
  }
  
  .filter-buttons {
    display: flex;
    background: #222;
    border-radius: 6px;
    padding: 4px;
  }
  
  .filter-btn {
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    background: transparent;
    color: white;
  }
  
  .filter-btn.active-filter {
    background: #444;
  }
  
  .filter-btn.favorites.active-filter {
    background: #e74c3c;
  }
  
  .btn-upload {
    background-color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
  }
  
  .gallery-photos {
    padding: 30px;
  }
  
  /* MASONRY GRID */
  .my-masonry-grid {
    display: flex;
    margin-left: -15px;
    width: auto;
  }
  
  .my-masonry-grid_column {
    padding-left: 15px;
    background-clip: padding-box;
  }
  
  .photo-card {
    position: relative;
    background: white;
    border-radius: 4px;
    overflow: hidden;
    cursor: pointer;
  }
  
  .photo-card.favorite {
    border: 3px solid #e74c3c;
  }
  
  .photo-card img {
    width: 100%;
    display: block;
  }
  
  .photo-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.2s;
  }
  
  .photo-card:hover .photo-overlay {
    opacity: 1;
  }
  
  .btn-overlay {
    background: white;
    border: none;
    padding: 10px 15px;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    font-size: 11px;
  }
  /* =========================================
   LIGHTBOX CSS (Pentru vizualizarea pozelor mari)
   ========================================= */
.lightbox-overlay {
    position: fixed;
    top: 0; left: 0; width: 100vw; height: 100vh;
    background: rgba(0, 0, 0, 0.95);
    z-index: 10000;
    display: flex; align-items: center; justify-content: center;
  }
  
  .lightbox-content {
    position: relative; width: 100%; height: 100%;
    display: flex; flex-direction: column; align-items: center; justify-content: center;
  }
  
  .lightbox-image-wrapper {
    display: flex; align-items: center; justify-content: center;
    max-height: 85vh; max-width: 90vw;
  }
  
  .lightbox-image {
    max-height: 85vh; max-width: 90vw; object-fit: contain;
    box-shadow: 0 5px 25px rgba(0,0,0,0.5);
  }
  
  .lightbox-close {
    position: absolute; top: 20px; right: 30px;
    font-size: 40px; color: white; background: none; border: none; cursor: pointer; z-index: 10001;
  }
  
  .lightbox-nav {
    position: absolute; top: 50%; transform: translateY(-50%);
    font-size: 60px; color: white; background: none; border: none; cursor: pointer; padding: 20px;
    transition: opacity 0.2s;
  }
  .lightbox-nav:hover { opacity: 0.7; }
  .lightbox-nav-left { left: 20px; }
  .lightbox-nav-right { right: 20px; }
  
  .lightbox-bottom {
    position: absolute; bottom: 30px; width: 100%;
    display: flex; justify-content: space-between; align-items: center;
    padding: 0 50px; box-sizing: border-box; color: white;
  }
  
  .lightbox-bottom-left { display: flex; gap: 15px; }
  .lightbox-counter { font-family: sans-serif; opacity: 0.8; }